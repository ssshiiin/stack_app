<!DOCTYPE html>
<html>
  <head>
    <title>StackApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if flash[:notice] %>
        <h2><%= flash[:notice] %></h2>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
