<!DOCTYPE html>
<html>
  <head>
    <title>StackApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header">
        <%= link_to("積み上げ", "/users/index", {class: "header__title"}) %>
      </div>
      <% if flash[:notice] %>
        <div class="header_flash">
          <h2 class="header_flash__title"><%= flash[:notice] %></h2>
        </div>
      <% end %>
    </header>
    <div class="main">
      <%= yield %>
    </div>
  </body>
</html>
